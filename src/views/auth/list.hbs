<div class="row">

    {{#each productos}}
    
    <div class="col m4">
    <div class="card small">
            <div class="card-image waves-effect waves-block waves-light">
                <img class="activator" src="../images/{{ img_name }}">
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4 truncate">{{name}}<i class="material-icons right">more_vert</i></span>
                <p><a href="#">${{price}}</a></p>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">{{title}}<i class="material-icons right">close</i></span>
                <p>{{descripction}}</p>
                <a href="/producto/delete/{{id}}" class="waves-effect waves-light btn red darken-4" ><i class="material-icons left">delete</i>Eliminar</a>
                <a href="/producto/edit/{{id}}" class="waves-effect waves-light btn green darken-3"><i class="material-icons left">edit</i>Modificar</a>
            </div>
        </div>
    </div>
    {{ else }}
        
    <div class="row">
        <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
            <span class="card-title">NO HAY PELICULAS</span>
            <p>Ayuda a nuestra comunidad agregando peliculas tu mismo</p>
            </div>
            <div class="card-action">
                <a href="/catalogo/add">Crear pelicula!</a>
            </div>
        </div>
        </div>
    </div>
            
    {{/each}}
    
  
</div>
<a href="/catalogo/add" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>