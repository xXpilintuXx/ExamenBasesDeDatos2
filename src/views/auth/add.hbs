<div class="row">
    <div class="col s12 m6 offset-m3">
      <div class="card white darken-1">
        <div class="card-content black-text">
            <div class="row">
                <div class="col offset-m4">
                    <span class="card-title">Registrar Pelicula</span>
                </div>
            </div>
          <form action="/catalogo/add" method="POST" enctype="multipart/form-data">
              <div class="row">
                <div class="input-field col s12 ">
                    <input name="name" type="text" class="validate">
                    <label for="name">Nombre</label>
                </div>
              </div>

              <div class="row">
                <div class="input-field col s12 ">
                    <textarea name="descripction" class="materialize-textarea"></textarea>
                    <label for="descripction">Descripcion</label>
                </div>
              </div>

              <div class="row">
                <div class="file-field input-field">
                  <div class="btn">
                    <span>File</span>
                    <input type="file" name="img" accept="image/*">
                  </div>
                  <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                  </div>
              </div>
              </div>

              <div class="row">
                <div class="input-field col s4">
                    <textarea name="price" class="materialize-textarea"></textarea>
                    <label for="price">Precio</label>
                </div>
              </div>

                <div class="input-field col s12">
                  <select name="id_categoria">
                    <option value="" disabled selected>Choose your option</option>
                    <option value="1">Libro</option>
                    <option value="2">Pelicula</option>
                    <option value="3">Musica</option>
                  </select>
                  <label>Categoria</label>
                </div>


                <div class="row">
                    <div class="col offset-m8">
                    <button class="btn waves-effect waves-light" type="submit">Enviar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
              </div>

                

          </form>
        </div>
      </div>
    </div>
  </div>